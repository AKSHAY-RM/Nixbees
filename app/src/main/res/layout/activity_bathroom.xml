<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".bathroom">

    <ImageButton
        android:id="@+id/menuButton"
        android:layout_width="37dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="15dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="menu"
        android:src="@drawable/baseline_menu_24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clothTitle"
        android:text="BathRoom"
        android:textSize="36sp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/lavender"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/clothImage"
        android:layout_width="match_parent"
        android:layout_height="288dp"
        android:layout_below="@id/clothTitle"
        android:src="@drawable/bathroom4" />

    <LinearLayout
        android:layout_width="299dp"
        android:layout_height="87dp"
        android:layout_below="@+id/clothImage"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="151dp"
        android:layout_marginBottom="517dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:contentDescription="Icon"
            android:src="@drawable/lighticon1" />

        <Switch
            android:id="@+id/light4"
            android:layout_width="172dp"
            android:layout_height="82dp"
            android:text="Light"
            android:textColor="@color/lavender"
            android:textOff="Light Off"
            android:textOn="Light On"
            android:textSize="35dp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="299dp"
        android:layout_height="87dp"
        android:layout_below="@+id/clothImage"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="149dp"
        android:layout_marginBottom="426dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:contentDescription="Icon"
            android:src="@drawable/geyser2" />

        <Switch
            android:id="@+id/geyser"
            android:layout_width="172dp"
            android:layout_height="82dp"
            android:text="Geyser"
            android:textColor="@color/lavender"
            android:textOff="Geyser Off"
            android:textOn="Geyser On"
            android:textSize="35dp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="299dp"
        android:layout_height="87dp"
        android:layout_below="@+id/clothImage"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="183dp"
        android:layout_marginEnd="147dp"
        android:layout_marginBottom="338dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:contentDescription="Icon"
            android:src="@drawable/blind1" />

        <Switch
            android:id="@+id/Blinds"
            android:layout_width="172dp"
            android:layout_height="82dp"
            android:text="Blinds"
            android:textColor="@color/lavender"
            android:textOff="Blinds Off"
            android:textOn="Blinds On"
            android:textSize="35dp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="299dp"
        android:layout_height="87dp"
        android:layout_below="@+id/clothImage"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="269dp"
        android:layout_marginEnd="147dp"
        android:layout_marginBottom="252dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:contentDescription="Icon"
            android:src="@drawable/speakers3" />

        <Switch
            android:id="@+id/speakers"
            android:layout_width="172dp"
            android:layout_height="82dp"
            android:text="Speakers"
            android:textColor="@color/lavender"
            android:textOff="speakers Off"
            android:textOn="speakers On"
            android:textSize="30dp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="299dp"
        android:layout_height="87dp"
        android:layout_below="@+id/clothImage"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="358dp"
        android:layout_marginEnd="147dp"
        android:layout_marginBottom="163dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:contentDescription="Icon"
            android:src="@drawable/washing2" />

        <Switch
            android:id="@+id/washer"
            android:layout_width="172dp"
            android:layout_height="82dp"
            android:text="Washer"
            android:textColor="@color/lavender"
            android:textOff="washing machine Off"
            android:textOn="washing machine On"
            android:textSize="35dp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="299dp"
        android:layout_height="87dp"
        android:layout_below="@+id/clothImage"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="446dp"
        android:layout_marginEnd="147dp"
        android:layout_marginBottom="75dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:contentDescription="Icon"
            android:src="@drawable/dryer1" />

        <Switch
            android:id="@+id/dryer"
            android:layout_width="172dp"
            android:layout_height="82dp"
            android:text="Dryer"
            android:textColor="@color/lavender"
            android:textOff="dryer Off"
            android:textOn="dryer On"
            android:textSize="35dp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </LinearLayout>

    <Button
        android:id="@+id/saveButton4"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Save" />
</RelativeLayout>